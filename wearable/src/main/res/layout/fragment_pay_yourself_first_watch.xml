<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/dailyRemainingText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:text="@string/pyf_title"
        android:textColor="@color/grey" />

    <RelativeLayout
        android:id="@+id/dailyTrackerCircle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_gravity="center"
        android:gravity="center">


        <ImageView
            android:id="@+id/pyfCircle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/pyf_circle"
            android:layout_centerInParent="true"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/pyfCircle"
            android:layout_alignTop="@+id/pyfCircle"
            android:layout_alignEnd="@+id/pyfCircle"
            android:layout_alignBottom="@+id/pyfCircle"
            android:gravity="center">

            <TextView
                android:id="@+id/recommendedPyfAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="$270"
                android:textSize="28sp"
                android:textColor="@color/light_grey"
                />

        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="@string/pyf_recommend"
        android:textColor="@color/grey" />




</LinearLayout>