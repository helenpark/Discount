<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.td.innovate.savingstracker.onboard.OnBoardActivity">

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/onBoard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/CFOnBoardProgressIndicator"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/CFOnBoardProgressIndicator"
        android:orientation="horizontal"
        android:visibility="visible">

        <View
            android:id="@+id/CFIntro"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/focus_dot_grey"
            android:layout_margin="5dp"/>

        <View
            android:id="@+id/income"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/focus_dot_grey"
            android:layout_margin="5dp"/>

        <View
            android:id="@+id/expense"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/focus_dot_grey"
            android:layout_margin="5dp"/>

        <View
            android:id="@+id/pyf"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/focus_dot_grey"
            android:layout_margin="5dp"/>


    </LinearLayout>

</RelativeLayout>